import random

def rzuc_koscmi(liczba_kostek):
    wyniki = [random.randint(1, 6) for _ in range(liczba_kostek)]
    return wyniki

def oblicz_punkty(wyniki):
    punkty = 0
    for liczba in range(1, 7):
        if wyniki.count(liczba) > 1:
            punkty += liczba * wyniki.count(liczba)
    return punkty

def main():
    while True:
        # Punkt 1: Pobierz liczbę kostek od użytkownika
        liczba_kostek = 0
        while liczba_kostek < 3 or liczba_kostek > 10:
            try:
                liczba_kostek = int(input("Podaj liczbę kostek do rzucenia (3-10): "))
                if liczba_kostek < 3 or liczba_kostek > 10:
                    print("Błąd: liczba kostek musi być z przedziału 3-10.")
            except ValueError:
                print("Błąd: podaj poprawną liczbę całkowitą.")

        # Punkt 2: Rzuć kostkami
        wyniki = rzuc_koscmi(liczba_kostek)

        # Punkt 3: Wyświetl wyniki
        for i, wynik in enumerate(wyniki, start=1):
            print(f"Kostka {i}: {wynik}")

        # Oblicz punkty
        punkty = oblicz_punkty(wyniki)
        print(f"Suma punktów: {punkty}")

        # Zapytaj gracza, czy chce zagrać ponownie
        decyzja = input("Czy chcesz zagrać ponownie? (t/n): ").strip().lower()
        if decyzja != 't':
            print("Dziękujemy za grę!")
            break

if __name__ == "__main__":
    main()